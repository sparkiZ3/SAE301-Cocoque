                    </div>
                    <p>{{ user.getEmail()|e }}</p>
                </div>
            </div>
            <button type="submit" class="btn">Valider</button>
            {{ form_end(userForm) }}
            
                {{ form_start(adressForm) }}
                <h1 id="delivery">Informations de livraison</h1>
                <p>Ajouter une adresse</p>    
            <div class="infoContainer">
                {% if adressDefined %}
                <div class="persoCard">
                    <div class="title">
                        <p>Pays</p>
